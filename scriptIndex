const loginError = document.getElementById("login-error");
const studentClassLabel = document.getElementById("student-class");
const accordion = document.getElementById("accordion");

let currentUser = null;

// Login function
loginBtn.addEventListener("click", () => {
  const username = document.getElementById("username").value.trim();
  const password = document.getElementById("password").value.trim();

  if (users[username] && users[username].password === password) {
    currentUser = users[username];
    loginPage.classList.add("hidden");
    notesPage.classList.remove("hidden");
    studentClassLabel.textContent = `${username.toUpperCase()} - ${currentUser.class}`;
    loadNotes(currentUser.class);
  } else {
    loginError.textContent = "Invalid username or password";
  }
});

// Logout function
logoutBtn.addEventListener("click", () => {
  currentUser = null;
  notesPage.classList.add("hidden");
  loginPage.classList.remove("hidden");
});

// Load notes into accordion
function loadNotes(className) {
  accordion.innerHTML = "";
  const classNotes = notesData[className];

  for (let subject in classNotes) {
    const subjectItem = document.createElement("div");
    subjectItem.classList.add("accordion-item");

    const subjectHeader = document.createElement("div");
    subjectHeader.classList.add("accordion-header");
    subjectHeader.textContent = subject;
    subjectItem.appendChild(subjectHeader);

    const weeksContainer = document.createElement("div");
    weeksContainer.classList.add("accordion-content");

    for (let week in classNotes[subject]) {
      const weekDiv = document.createElement("div");
      weekDiv.classList.add("note");
      weekDiv.innerHTML = `<strong>Week ${week}: ${classNotes[subject][week].topic}</strong>`;
      weekDiv.addEventListener("click", () => {
        weekDiv.innerHTML = `
          <h4>MERCY BRITISH SCHOOLS</h4>
          <p><strong>Class:</strong> ${className}</p>
          <p><strong>Subject:</strong> ${subject}</p>
          <p><strong>Week:</strong> ${week}</p>
          <p><strong>Topic:</strong> ${classNotes[subject][week].topic}</p>
          ${classNotes[subject][week].content}
        `;
      });
      weeksContainer.appendChild(weekDiv);
    }

    subjectItem.appendChild(weeksContainer);
    accordion.appendChild(subjectItem);

    // Toggle accordion behavior
    subjectHeader.addEventListener("click", () => {
      weeksContainer.style.display = 
        weeksContainer.style.display === "block" ? "none" : "block";
    });
  }
}
